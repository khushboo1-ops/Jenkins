pipeline {
    agent any
 
    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository from GitLab...'
                checkout scm
            }
        }
 
        stage('Compile') {
            steps {
                echo 'Compiling abc.java...'
                bat '''
                    dir
                    javac abc.java
                '''
            }
        }
 
        stage('Run') {
            steps {
                echo 'Running abc.java...'
                bat 'java abc'
            }
        }
    }
 
    post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed. Please check logs.'
        }
    }
}
 
